.W_top_container
    .W_top
        .W_top_header
            .W_top_nav
                ul
                    li(class="home")
                        a(class="i-link" href='/')
                            span 首页
                    li(class="onePage")
                        a(class="i-link" href="/onePage")
                            span 单页
            .W_user_box
                if user
                    p.navbar-text.navbar-right
                        span 欢迎您,#{user.name}
                        span &nbsp;|&nbsp;
                        a.navbar-link(href="/admin/main") 后台管理
                        span &nbsp;|&nbsp;
                        a.navbar-link(href="/logout" class="logoutBtn") 退出
                else
                    p.navbar-text.navbar-right
                        a.navbar-link(href="/user/signinPage") 注册
                        span &nbsp;|&nbsp;
                        a.navbar-link(href="/user/signupPage") 登陆
            .W_nav_search
                .nav_search_form
                    input(type="text" class="nav_search_input" autocomplete="off" placeholder="搜索")
                    button(type="button" class="nav_search_btn")
                        span(class="icon icon-search")